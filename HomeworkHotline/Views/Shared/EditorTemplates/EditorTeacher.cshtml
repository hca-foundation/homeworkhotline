@model Repository.TeacherModel

@{
    Layout = null;
}


@Html.HiddenFor(model => model.UserID)


<div id="editWindow" class="edit-window">
    <div class="col-lg-11">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">First Name</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.FirstName)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Last Name</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.LastName)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Phone Number</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.PhoneNumber)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Email</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.Email)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Hire Date</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.HireDate, new { @class = "datepicker", @type = "date" })</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">End Date</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.EndDate, new { @class = "datepicker", @type = "date" })</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">MNPS Employee #</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.MNPSEmployeeNo)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Volunteer</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.Volunteer)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Subject</label>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.MainSubject,
                        new SelectList((System.Collections.IEnumerable)ViewData["subjectTypes"], "SubjectTypeName", "SubjectTypeName"), "", new { @class = "k-dropdown-wrap k-state-default k-input dd-format" })
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Subject Other</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.SubjectOther)</div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-4 control-label">Grade Level</label>
                <div class="col-sm-6">@Html.EditorFor(model => model.GradeLevel)</div>
            </div>
        </div>
    </div>
</div>
